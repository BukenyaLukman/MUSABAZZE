<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <TextView
            android:id="@+id/point_of_departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Departure"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/destination_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginStart="250dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/drivers_name_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:text="Name of Driver"
            android:layout_marginStart="120dp"
            android:textColor="@color/colorAccent"
            android:textStyle="italic"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/price_of_journey_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50000"
            android:textSize="25sp"
            android:layout_marginTop="75dp"
            android:layout_marginStart="60dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:id="@+id/number_plate_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UAX 678V"
            android:layout_marginTop="80dp"
            android:layout_marginStart="290dp"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/status_of_journey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In Motion"
            android:layout_marginTop="110dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorExtra"
            android:layout_marginStart="150dp"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>